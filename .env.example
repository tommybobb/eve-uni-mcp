# EVE University Wiki MCP Server Configuration

# Transport mode: "sse" for Docker/remote, "stdio" for local
MCP_TRANSPORT=sse

# Server host and port
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Security: Optional authentication token
# If set, clients must include "Authorization: Bearer <token>" header
# Leave empty to disable authentication (not recommended for public exposure)
MCP_AUTH_TOKEN=

# Security: Rate limiting
# Maximum number of requests per time window per client IP
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Security: CORS origins (comma-separated)
# Leave empty to disable CORS (recommended for local/private networks)
# Example: CORS_ORIGINS=http://localhost:3000,https://example.com
CORS_ORIGINS=

# Debug: verbose SSE/message transport logs (for troubleshooting init/session flow)
MCP_SSE_DEBUG=false
# Max characters of request body preview shown in debug logs
MCP_SSE_DEBUG_BODY_PREVIEW_CHARS=220
# Compatibility: allow SSE clients that pipeline/skip explicit initialize flow
# true = run MCP server session in stateless mode (recommended for mcp-remote compatibility)
MCP_SSE_STATELESS=true

# Container resource limits (adjust for your Pi)
# CPU limit (0.5 = 50% of one core)
CPU_LIMIT=0.5
CPU_RESERVATION=0.25

# Memory limits (256M should be plenty)
MEM_LIMIT=256M
MEM_RESERVATION=128M
